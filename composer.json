{
  "name": "eureka/kernel-http",
  "description": "Kernel Http for Content PHP application. Use PSR-7, 15 & 17 to build an application.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Kernel\\Http\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Kernel\\Http\\Tests\\": "./tests"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",

    "nyholm/psr7": "^1.2",
    "thecodingmachine/safe": "0.1.*",

    "symfony/config": "^5.1",
    "symfony/dependency-injection": "^5.1",
    "symfony/finder": "^5.1",
    "symfony/routing": "^5.1",
    "symfony/yaml": "^5.1",

    "psr/log": "^1.1",
    "psr/cache": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",

    "eureka/component-http": "^5.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpcov": "^8.2.0",
    "phpunit/phpunit": "^9.4.0",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/cache": "^v5.1"
  }
}
